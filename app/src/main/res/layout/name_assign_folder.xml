<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Name"/>

    <EditText
        android:id="@+id/folder_nu_nam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:background="@color/red"
        android:textColor="@color/white"
        android:id="@+id/set_nam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/folder_nu_nam"
        app:layout_constraintEnd_toEndOf="@id/folder_nu_nam"
        app:layout_constraintTop_toBottomOf="@id/folder_nu_nam"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Set Name"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>